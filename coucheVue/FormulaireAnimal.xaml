<Window x:Class="RefugeAnimaux.coucheVue.FormulaireAnimal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Animal" Height="350" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Identifiant -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Identifiant :" VerticalAlignment="Center" Margin="0,0,0,8"/>
        <TextBox x:Name="txtIdentifiant" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" IsEnabled="False"/>

        <!-- Nom -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Nom :" VerticalAlignment="Center" Margin="0,0,0,8"/>
        <TextBox x:Name="txtNom" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

        <!-- Type -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Type :" VerticalAlignment="Center" Margin="0,0,0,8"/>
        <ComboBox x:Name="cmbType" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8">
            <ComboBoxItem Content="chat"/>
            <ComboBoxItem Content="chien"/>
        </ComboBox>

        <!-- Sexe -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Sexe :" VerticalAlignment="Center" Margin="0,0,0,8"/>
        <ComboBox x:Name="cmbSexe" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8">
            <ComboBoxItem Content="M"/>
            <ComboBoxItem Content="F"/>
        </ComboBox>

        <!-- Date de naissance -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Date de naissance :" VerticalAlignment="Center" Margin="0,0,0,8"/>
        <DatePicker x:Name="dpDateNaissance" Grid.Row="4" Grid.Column="1" Margin="0,0,0,8"/>

        <!-- Boutons -->
        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Enregistrer" Click="BtnEnregistrer_Click" Padding="15,5" Margin="0,0,10,0"/>
            <Button Content="Annuler" Click="BtnAnnuler_Click" Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>
