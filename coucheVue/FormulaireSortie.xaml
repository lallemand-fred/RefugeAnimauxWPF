<Window x:Class="RefugeAnimaux.coucheVue.FormulaireSortie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enregistrer une sortie" Width="500"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- GroupBox Animal -->
        <GroupBox Grid.Row="0" Header="Animal qui sort" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Animal :" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbAnimal" Grid.Column="1" MaxDropDownHeight="200" SelectionChanged="CmbAnimal_SelectionChanged"/>
            </Grid>
        </GroupBox>

        <!-- GroupBox Raison -->
        <GroupBox Grid.Row="1" Header="Raison de la sortie" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Adoption -->
                <RadioButton x:Name="rbAdoption" Grid.Row="0" Grid.Column="0" Content="Adoption"
                             Checked="RbRaison_Checked" Margin="0,0,0,8"/>
                <ComboBox x:Name="cmbContactAdoption" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"
                          Visibility="Collapsed"/>

                <!-- Famille accueil -->
                <RadioButton x:Name="rbFamilleAccueil" Grid.Row="1" Grid.Column="0" Content="Famille d'accueil"
                             Checked="RbRaison_Checked" Margin="0,0,0,8"/>
                <ComboBox x:Name="cmbContactFamille" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"
                          Visibility="Collapsed"/>

                <!-- Deces -->
                <RadioButton x:Name="rbDeces" Grid.Row="2" Grid.Column="0" Content="Deces"
                             Checked="RbRaison_Checked" Margin="0,0,0,8"/>
                <TextBlock x:Name="lblDecesInfo" Grid.Row="2" Grid.Column="1"
                           Text="(date deces = date sortie)" VerticalAlignment="Center"
                           Foreground="Gray" FontStyle="Italic" Visibility="Collapsed"/>

                <!-- Retour proprietaire -->
                <RadioButton x:Name="rbRetourProprietaire" Grid.Row="3" Grid.Column="0" Content="Retour proprietaire"
                             Checked="RbRaison_Checked" Margin="0,0,0,8"/>
                <ComboBox x:Name="cmbContactProprietaire" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8"
                          Visibility="Collapsed"/>
            </Grid>
        </GroupBox>

        <!-- GroupBox Date sortie -->
        <GroupBox Grid.Row="2" Header="Date de sortie" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Date :" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpDateSortie" Grid.Column="1"/>
            </Grid>
        </GroupBox>

        <!-- Boutons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Enregistrer" Click="BtnEnregistrer_Click" Padding="15,5" Margin="0,0,10,0"/>
            <Button Content="Annuler" Click="BtnAnnuler_Click" Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>
