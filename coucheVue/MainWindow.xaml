<Window x:Class="RefugeAnimaux.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RefugeAnimaux"
        mc:Ignorable="d"
        Title="Refuge Animaux" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Grid.Row="0" Text="Liste des Animaux" FontSize="20" FontWeight="Bold" Margin="10"/>

        <!-- DataGrid pour afficher les animaux -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding ListeAnimaux}"
                  SelectedItem="{Binding AnimalSelectionne}"
                  SelectionChanged="DataGrid_SelectionChanged"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Identifiant" Binding="{Binding Identifiant}" Width="120"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="150"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                <DataGridTextColumn Header="Sexe" Binding="{Binding Sexe}" Width="50"/>
                <DataGridTextColumn Header="Date Naissance" Binding="{Binding DateNaissance, StringFormat=dd/MM/yyyy}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <Button Content="Ajouter un animal" Click="BtnAjouter_Click" Padding="10,5" Margin="0,0,10,0"/>
            <Button x:Name="btnModifier" Content="Modifier" Click="BtnModifier_Click" Padding="10,5" Margin="0,0,10,0" IsEnabled="False"/>
            <Button x:Name="btnSupprimer" Content="Supprimer" Click="BtnSupprimer_Click" Padding="10,5" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
