<Window x:Class="RefugeAnimaux.coucheVue.FormulaireArrivee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enregistrer une arrivee" Height="550" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- GroupBox Animal -->
        <GroupBox Grid.Row="0" Header="Animal" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- RadioButtons -->
                <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,10">
                    <RadioButton x:Name="rbNouvelAnimal" Content="Nouvel animal" IsChecked="True"
                                 Checked="RbNouvelAnimal_Checked" Margin="0,0,20,0"/>
                    <RadioButton x:Name="rbAnimalExistant" Content="Animal existant"
                                 Checked="RbAnimalExistant_Checked"/>
                </StackPanel>

                <!-- Champs nouvel animal -->
                <TextBlock x:Name="lblNom" Grid.Row="1" Grid.Column="0" Text="Nom :"
                           VerticalAlignment="Center" Margin="0,0,0,8"/>
                <TextBox x:Name="txtNom" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

                <TextBlock x:Name="lblType" Grid.Row="2" Grid.Column="0" Text="Type :"
                           VerticalAlignment="Center" Margin="0,0,0,8"/>
                <ComboBox x:Name="cmbType" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8">
                    <ComboBoxItem Content="chat"/>
                    <ComboBoxItem Content="chien"/>
                </ComboBox>

                <TextBlock x:Name="lblSexe" Grid.Row="3" Grid.Column="0" Text="Sexe :"
                           VerticalAlignment="Center" Margin="0,0,0,8"/>
                <ComboBox x:Name="cmbSexe" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8">
                    <ComboBoxItem Content="M"/>
                    <ComboBoxItem Content="F"/>
                </ComboBox>

                <TextBlock x:Name="lblDateNaissance" Grid.Row="4" Grid.Column="0" Text="Date de naissance :"
                           VerticalAlignment="Center" Margin="0,0,0,8"/>
                <DatePicker x:Name="dpDateNaissance" Grid.Row="4" Grid.Column="1" Margin="0,0,0,8"/>

                <!-- ComboBox animal existant (cache par defaut) -->
                <TextBlock x:Name="lblAnimalExistant" Grid.Row="1" Grid.Column="0" Text="Animal :"
                           VerticalAlignment="Center" Margin="0,0,0,8" Visibility="Collapsed"/>
                <ComboBox x:Name="cmbAnimalExistant" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"
                          Visibility="Collapsed"/>
            </Grid>
        </GroupBox>

        <!-- GroupBox Contact -->
        <GroupBox Grid.Row="1" Header="Contact qui amene l'animal" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Contact :" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbContact" Grid.Column="1" Margin="0,0,10,0"/>
                <Button x:Name="btnNouveauContact" Grid.Column="2" Content="Nouveau contact..."
                        Click="BtnNouveauContact_Click" Padding="10,5"/>
            </Grid>
        </GroupBox>

        <!-- GroupBox Informations entree -->
        <GroupBox Grid.Row="2" Header="Informations d'entree" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Raison :"
                           VerticalAlignment="Center" Margin="0,0,0,8"/>
                <ComboBox x:Name="cmbRaison" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8">
                    <ComboBoxItem Content="abandon"/>
                    <ComboBoxItem Content="errant"/>
                    <ComboBoxItem Content="deces_proprietaire"/>
                    <ComboBoxItem Content="saisie"/>
                    <ComboBoxItem Content="retour_adoption"/>
                    <ComboBoxItem Content="retour_famille_accueil"/>
                </ComboBox>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Date d'entree :"
                           VerticalAlignment="Center" Margin="0,0,0,8"/>
                <DatePicker x:Name="dpDateEntree" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>
            </Grid>
        </GroupBox>

        <!-- Boutons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Enregistrer" Click="BtnEnregistrer_Click" Padding="15,5" Margin="0,0,10,0"/>
            <Button Content="Annuler" Click="BtnAnnuler_Click" Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>
